{
  "name": "az.js",
  "version": "1.0.1",
  "description": "A JavaScript implementation of AlphaGo Zero",
  "author": "ICHIKAWA, Yuji",
  "license": "MIT",
  "dependencies": {
    "worker-rmi": "^1.0.7"
  },
  "devDependencies": {
    "http-server": "^0.11.1",
    "jsdoc": "^3.5.5",
    "mocha": "^5.2.0",
    "rollup": "^0.63.4",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-node-resolve": "^3.3.0"
  },
  "scripts": {
    "build": "npm run main-build && npm run worker-build && npm run engine-build",
    "main-build": "rollup --config rollup.config.az.js",
    "worker-build": "rollup --config rollup.config.az-worker.js",
    "engine-build": "rollup --config rollup.config.az-engine.js",
    "doc": "jsdoc -r src -d docs/docs",
    "server": "http-server docs -o",
    "test": "mocha"
  }
}
